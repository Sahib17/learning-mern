<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block outline-none rounded-lg w-full px-5 py-2 bg-zinc-800" name="title" type="text" placeholder="Title">
                <textarea class="block outline-none rounded-lg w-full mt-2 px-5 py-2 bg-zinc-800 resize-none" name="details" placeholder="task details"></textarea>
                <input class="mt-2 bg-green-700 px-5 py-2 rounded-md" type="submit" value="Create">
            </form>
        </div>
        <div class="tasks flex flex-wrap gap-4 p-10">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 inline-block" href="/files/<%= val %>">Read More</a>
                            <a href="/edit/<%= val %>">edit</a>
                        </div>
                        
                    </div>
            <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
            
        </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>
</html>